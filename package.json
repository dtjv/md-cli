{
  "name": "@dtjv/md-cli",
  "version": "0.1.0",
  "description": "A Node CLI to convert GFM to GitHub styled HTML.",
  "author": "David Valles <davidtjvalles@gmail.com> (https://dtjv.io/)",
  "type": "module",
  "bin": {
    "md": "index.js"
  },
  "files": ["index.js", "gihub-markdown.js"],
  "engines": {
    "node": ">=16.0.0"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "format": "prettier -w ."
  },
  "dependencies": {
    "showdown": "1.9.1"
  },
  "devDependencies": {
    "prettier": "2.5.0"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true,
    "proseWrap": "always"
  }
}
